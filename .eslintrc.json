{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "react/jsx-uses-vars": [2],
    "semi": "off",
    "no-console": 0,
    "arrow-parens": 0,
    "no-debugger": 2,
    "one-var": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "linebreak-style": ["error", "windows"],
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }]
  }
}
